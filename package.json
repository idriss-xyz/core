{
  "name": "idriss-monorepo",
  "scripts": {
    "extension:dev": "turbo watch dev --filter=@idriss-xyz/extension",
    "extension:prod": "turbo run build --filter=@idriss-xyz/extension",
    "main-landing:dev": "turbo dev --filter=@idriss-xyz/main-landing",
    "main-landing:prod": "turbo start --filter=@idriss-xyz/main-landing",
    "copilot-api:dev": "turbo dev --filter=@idriss-xyz/copilot-api",
    "copilot-api:prod": "turbo prod --filter=@idriss-xyz/copilot-api",
    "creator-api:dev": "turbo dev --filter=@idriss-xyz/creator-api",
    "creator-api:prod": "turbo prod --filter=@idriss-xyz/creator-api",
    "creator-api:test": "turbo run test --filter=@idriss-xyz/creator-api",
    "twitch-extension:dev": "turbo watch dev --filter=@idriss-xyz/twitch-extension",
    "twitch-extension:prod": "turbo run build --filter=@idriss-xyz/twitch-extension",
    "dev": "turbo dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "type-check": "turbo run type-check",
    "unused-exports": "turbo run unused-exports",
    "circular-dependencies": "turbo run circular-dependencies",
    "check": "pnpm lint:fix && pnpm format:fix && pnpm type-check && pnpm unused-exports && pnpm circular-dependencies"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.2.2",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=20.13.0",
    "pnpm": ">=9.1.0"
  },
  "dependencies": {
    "@ponder/client": "^0.13.13"
  }
}